<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
     <style name="main_tab_bottom">
        <item name="android:button">@null</item>  
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:textSize">10.0dip</item>
<!--         <item name="android:textColor">#ffffffff</item> -->
<item name="android:textColor">@color/selectcolor</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
      <item name="android:background">@drawable/tab_btn_bg</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
</resources>
